pipeline {
    agent {
        docker {
            image 'ruby'
            args '--network rocklov-network'
        }
    }

    stages {
        stage('Prepation') {
            steps {
                sh 'cd api && bundle install'
            }
        }
        stage('Testing') {
            steps {
                sh 'cd api && rspec'
                junit 'api/logs/report.xml'
            }
        }
        stage ('UAT') {
            steps {
                echo 'Aguardando testes de aceitação.'
                input message: 'podemos ir para produção?'
            }
        }
        stage {
            steps {
                echo 'Api pronta para produção'
            }
        }
    }
    post {
        always {
            junit 'api/logs/report.xml'
        }
    }
}
